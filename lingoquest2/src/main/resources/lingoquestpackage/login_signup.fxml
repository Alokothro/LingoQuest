<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="lingoquestpackage.controllers.LoginSignupController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Welcome to LingoQuest" style="-fx-font-size: 24px;" />
            
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />

            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
            <Button fx:id="signupButton" text="Signup" onAction="#handleSignup" />
            
            <Label fx:id="messageLabel" text="" textFill="red" />
        </VBox>
    </center>
</BorderPane>
