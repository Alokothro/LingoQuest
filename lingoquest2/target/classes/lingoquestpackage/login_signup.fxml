<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="lingoquestpackage.controllers.LoginSignupController">
   <right>
        <VBox alignment="CENTER" prefHeight="237.0" prefWidth="977.0" spacing="10" style="-fx-background-color: #002642;" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" prefHeight="70.0" prefWidth="243.0" style="-fx-font-size: 48px; -fx-text-fill: #FABD00;" text="LingoQuest" translateX="-300.0" />
            
            <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="281.0" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />

            <Button fx:id="loginButton" onAction="#handleLogin" text="Login" />
            <Button fx:id="signupButton" onAction="#handleSignup" text="Signup" />
            <Button fx:id="speakButton" onAction="#handleSpeak" text="Speak" />
            
            <Label fx:id="messageLabel" text="" textFill="red" />
        </VBox>
   </right>
</BorderPane>
